\$form['$1'] = array(
'#type' => 'textfield',
'#title' => t('$2'),
'#required'  => ${3:$$(yas/choose-value '("FALSE" "TRUE"))},
'#maxlength' => ${4:128},
'#size' => ${5:60},
'#default_value' => $6,
);
